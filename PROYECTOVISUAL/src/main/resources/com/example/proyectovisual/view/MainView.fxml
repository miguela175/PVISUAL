<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.proyectovisual.controller.MainController">

    <!-- Sección superior: conexión a la base -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="hostField" promptText="Host (ej: localhost)"/>
            <TextField fx:id="portField" promptText="Puerto (ej: 5432)"/>
            <TextField fx:id="dbNameField" promptText="Base de datos"/>
            <TextField fx:id="userField" promptText="Usuario"/>
            <PasswordField fx:id="passwordField" promptText="Contraseña"/>
            <TextField fx:id="tableNameField" promptText="Nombre de la tabla"/>
            <Button text="Conectar y cargar tabla" onAction="#handleConnectAndLoad"/>
        </VBox>
    </top>

    <!-- Sección central: tabla dinámica -->
    <center>
        <TableView fx:id="dynamicTable"/>
    </center>

    <!--Sección inferior: CRUD dinámico -->
    <bottom>
        <VBox fx:id="crudBox" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
